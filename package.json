{
	"name": "tailwindcss-content-visibility",
	"version": "1.0.0",
	"repository": "https://github.com/Cherry/tailwindcss-content-visibility",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"require": {
			"types": "./dist/index.d.cts",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"src",
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
		"check-types": "tsc --noEmit",
		"lint": "npm run lint:js",
		"lint:js": "eslint \"**/*.{js,ts}\"",
		"lint:js:fix": "eslint \"**/*.{js,ts}\" --fix",
		"test": "npm run lint && npm run check-types && vitest run"
	},
	"devDependencies": {
		"@nodecraft/eslint-config": "^43.1.0",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@vitest/eslint-plugin": "^1.1.4",
		"eslint": "^8.57.0",
		"eslint-plugin-json": "^4.0.1",
		"eslint-plugin-unicorn": "^55.0.0",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.13",
		"tsup": "^8.3.0",
		"vitest": "^2.1.1"
	},
	"peerDependencies": {
		"tailwindcss": "^3.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
